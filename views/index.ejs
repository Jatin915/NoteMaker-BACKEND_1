<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="box-border">
    <div class="min-w-full min-h-screen bg-zinc-900 p-8 relative">

        <!-- form starts here -->
        <div class="w-[100%]">
            <form action="/create" method="post" class="text-white flex flex-col items-center">

                <input type="text" class="block w-[70%] outline-none bg-zinc-800 border-zinc-300 rounded-md p-2 m-2" placeholder="Enter note title" name="title">

                <textarea class="w-[70%] h-[10em] block resize-none p-2 m-2 outline-none bg-zinc-800 rounded-md" placeholder="type your message here.." name="message"></textarea>
                <button class="bg-blue-600 p-2 m-2 rounded-md hover:bg-blue-700 w-[70%] cursor-pointer" type="submit">Create Note</button>
            </form>
        </div>
        <!-- form ends here -->


        <!-- tasks container code starts here -->
        <div class="text-white w-[100%] flex justify-start flex-wrap pt-8 px-50">
            <% if(fileList.length > 0) { %>
                <% fileList.forEach(f => { %>
                    <% if(f.length > 4) { %>
                        <div class="min-w-50 max-w-72 py-4 px-2 mt-12 m-2 rounded-lg bg-zinc-700">
                            <h1><%= f %></h1>
                            <a href="/file/<%= f %>" class="text-blue-500">open</a>
                        </div>
                    <% } %>
                <% }) %>
            <% } else { %>
                <h2 class="text-zinc-600">no task yet!</h2>
            <% } %>
        </div>
        <!-- tasks container code ends here -->

    </div>
</body>
</html>